<h1 class="pageHeading">Register</h1>

<div class="update-user-input">
  <input
    id="first_name"
    name="first_name"
    type="text"
    class="form-control"
    value=""
    placeholder="First Name"
    aria-label="first_name"
    aria-describedby="basic-addon1"
  />
</div>
<div class="update-user-input">
  <input
    id="last_name"
    name="last_name"
    type="text"
    value=""
    class="form-control"
    placeholder="Last Name"
    aria-label="last_name"
    aria-describedby="basic-addon1"
  />
</div>

<div class="update-user-input">
  <input
    id="email_id"
    name="email_id"
    type="text"
    value=""
    class="form-control"
    placeholder="Email"
    aria-label="email_id"
    aria-describedby="basic-addon1"
  />
</div>

<div class="update-user-input">
  <input
    id="phone"
    name="phone"
    type="text"
    value=""
    class="form-control"
    placeholder="Phone"
    aria-label="phone"
    aria-describedby="basic-addon1"
  />
</div>

<div class="update-user-input">
  <select class="select-gender" name="gender" id="gender">
    <option value="MALE">Male</option>
    <option value="FEMALE">Female</option>
    <option value="OTHERS">Other</option>
  </select>
</div>

<script>
  function registerUserHandler() {
    const first_name = document.getElementById("first_name").value;
    const last_name = document.getElementById("last_name").value;
    const email_id = document.getElementById("email_id").value;
    const dob = document.getElementById("dob").value;
    const password = document.getElementById("password").value;
    const gender = document.getElementById("gender").value;
    const phone = document.getElementById("phone").value;

    if (!first_name) alert("Please enter first name");
    if (!last_name) alert("Please enter last name");
    if (!email_id) alert("Please enter email id");
    if (!dob) alert("Please enter email dob");
    if (!password) alert("Please enter password");
    if (!gender) alert("Please enter gender");
    if (!phone) alert("Please enter phone");

    if (
      !first_name ||
      !last_name ||
      !email_id ||
      !dob ||
      !password ||
      !gender ||
      !phone
    )
      return;

    const userData = {
      first_name,
      last_name,
      email_id,
      dob,
      password,
      gender,
      phone,
    };
    fetch("http://localhost:8000/api/users/create", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify(userData),
    })
      .then((response) => response.json())
      .then((data) => {
        window.open(`http://localhost:8000/users/${data.data.id}`);
      })
      .catch((error) => {
        console.error("Error:", error);
      });
  }
</script>
